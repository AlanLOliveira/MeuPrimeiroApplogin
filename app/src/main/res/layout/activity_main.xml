<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/androidmal"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/introd1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minha_tela_de_login"
        android:textSize="30sp"
        android:textColor="@color/QuandtumBlack"
        android:layout_gravity="center"
        />


    <TextView
        android:id="@+id/introd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="100sp"
        android:text="@string/vamos_logar"
        android:textColor="@color/Vermelho"

        android:textSize="25sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="32dp">

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Digite seu email aqui"
        android:layout_marginTop="80sp"
        android:gravity="center"
        android:layout_weight="2"
        android:autofillHints="@string/app_name"
        tools:ignore="HardcodedText" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/login"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:textSize="30sp"

        />

</LinearLayout>
